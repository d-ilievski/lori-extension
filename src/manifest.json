{
  "manifest_version": 2,
  "name": "Lori",
  "version": "0.1.0",
  "homepage_url": "https://iamlori.app/",
  "description": "Quickly create engaging, optimized images for social media and web.",
  "default_locale": "en",
  "permissions": [
    "tabs",
    "file://*",
    "downloads",
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "Lori - Quickly create engaging, optimized images for social media and web",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.google.com https://www.dropbox.com; object-src 'self'"
}